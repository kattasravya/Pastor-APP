<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/secondFragment"
            android:layout_width="0dp"
            android:layout_height="225dp"
            android:background="@drawable/bg"
            android:textColor="#43a047"
            android:textSize="40sp"
            android:textStyle="italic|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/arrow"
            android:layout_margin="8dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/back_arrow"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/arrow"
            android:text="My Account"
            app:layout_constraintEnd_toStartOf="@id/edit_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/arrow"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="30dp"
            android:cropToPadding="true"
            android:id="@+id/edit_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edit_note"
            />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/profile_icon"
        android:layout_margin="8dp"
        android:layout_marginStart="21dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="@id/secondFragment"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/aboutus"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:text="Jessy"
        android:id="@+id/name"
        app:layout_constraintEnd_toStartOf="@id/edit_icon"
        app:layout_constraintTop_toTopOf="@id/profile_icon"
        app:layout_constraintStart_toEndOf="@id/profile_icon"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:text="Jessy@gmail.com"
        app:layout_constraintEnd_toStartOf="@id/edit_icon"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toEndOf="@id/profile_icon"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/secondFragment">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:layout_margin="8dp"
            android:layout_marginStart="21dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/home"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="Home"
            android:id="@+id/txt_home"
            app:layout_constraintBottom_toBottomOf="@id/home"
            app:layout_constraintTop_toTopOf="@id/home"
            app:layout_constraintStart_toEndOf="@id/home"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#989898"
        app:layout_constraintTop_toBottomOf="@id/lyt_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt_1"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lyt">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home1"
            android:layout_margin="8dp"
            android:layout_marginStart="21dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/aboutus"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="About Us"
            app:layout_constraintBottom_toBottomOf="@id/home1"
            android:id="@+id/txt_home1"
            app:layout_constraintTop_toTopOf="@id/home1"
            app:layout_constraintStart_toEndOf="@id/home1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:background="#989898"
        app:layout_constraintTop_toBottomOf="@id/lyt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt_2"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lyt_1">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home2"
            android:layout_margin="8dp"
            android:layout_marginStart="21dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/aboutus"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="Contact Us"
            android:id="@+id/txt_home2"
            app:layout_constraintBottom_toBottomOf="@id/home2"
            app:layout_constraintTop_toTopOf="@id/home2"
            app:layout_constraintStart_toEndOf="@id/home2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:background="#989898"
        app:layout_constraintTop_toBottomOf="@id/lyt_2" />
</androidx.constraintlayout.widget.ConstraintLayout>